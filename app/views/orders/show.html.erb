<body class="teal">
<% if !admin_user %>
  <h5 class="center white-text light">Thank you! Your order for <span class="orange-text"><%= @order.movie.title %></span> has been successfully placed. We have sent a confirmation to <span class="orange-text"><%= @order.email %></span></h2>
<% end %>

<div class="row custom-row">
  <div class="col s7 push-s5 m4">
    <div class="card">
      <div class="card-content teal-text light">
        <h2 class="center brown-text"><i class="material-icons">theaters</i></h2>
        <h5 class="card-title center">Order Details</h5>
          <div class="light">
            <p>Movie: <%= @order.movie.title %></p>
            <p>Date: <%= @order.showing.date.strftime("%B %d") %></p>
            <p>Time: <%= @order.showing.time.strftime("%I:%M %p") %></p>
            <p>Name: <%= @order.name %></p>
            <p>Email: <%= @order.email %></p>
            <p>Credit card: ************ <%= @order.credit_card[-4..-1] %></p>
            <p>Card expiration date: <%= @order.card_expy_date.strftime("%B %d, %Y") %></p>
          </div>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back to movies', root_path, class: "orange-text center" %>

</body>