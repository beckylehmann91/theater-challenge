<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@showing, @order] do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name, placeholder: "First and last" %>
  <br>
  <%= f.label :email  %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :credit_card  %>
  <%= f.text_field :credit_card %>
  <br>
  <%= f.label :card_expy_date  %>
  <%= f.text_field :card_expy_date, placeholder: "YYYY-MM-DD" %>
  <br>
  <%= f.submit %>
<% end %>