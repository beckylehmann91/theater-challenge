<%= form_for [@showing, @order] do |f| %>

  <% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>


  <%= f.label :name  %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email  %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :credit_card  %>
  <%= f.text_field :credit_card %>
  <br>
  <%= f.label :card_expy_date  %>
  <%= f.text_field :card_expy_date %>
  <br>
  <%= f.submit %>
<% end %>