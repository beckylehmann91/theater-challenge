<% @movies.each do |movie| %>
  <%= link_to (movie) do %>
    <h2><%= movie.title %></h2>
  <% end %>
  <% movie.showings.each do |showing| %>
    <p><%= showing.date.strftime("%B %d") %> | <%= showing.time.strftime("%I:%M %p") %></p>
  <% end %>

  <% if current_user %>
    <p>Options for movie</p>
    <%= link_to 'Edit Movie', edit_movie_path(movie) %>
    <%= link_to 'Delete Movie', movie, method: :delete, data: {confirm: 'Are you sure you want to delete this movie?'} %>
  <% end %>
<% end %>
<br>
<br>
<br>

<% if current_user %>
  <%= link_to 'Add Movie', new_movie_path %>
<% end %>