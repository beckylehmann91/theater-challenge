<h1><%= @movie.title %></h1>

<% @showings.each do |showing| %>
  <%= link_to (showing) do %>
    <p><%= showing.date.strftime("%B %d") %> | <%= showing.time.strftime("%I:%M %p") %></p>
  <% end %>
  <% if admin_user %>
    <%= link_to 'Edit', edit_showing_path(showing) %>
    <%= link_to 'Delete', showing, method: :delete, data: {confirm: 'Are you sure you want to delete this showing?'} %>
  <% end %>
<% end %>

<% if admin_user %>
  <p>Options for showing</p>
  <%= link_to 'Add Showing', new_showing_path([@movie, @showing]) %>

    <% if @orders.length == 0 %>
      <p>There are currently no orders for <%= @movie.title %>.</p>
    <% else %>
      <p>Orders</p>
      <% @orders.each do |order| %>
        <%= link_to showing_order_path(order.showing, order) do %>
        <p>Order #<%= order.id%></p>
      <% end %>
    <% end %>

  <% end %>
<%  end %>
<%= link_to 'Back', movies_path %>