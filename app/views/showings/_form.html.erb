<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @showing do |f| %>
  <%= f.label :movie  %>
  <%= f.text_field :movie, value: @showing.movie.title.presence || "" %>
  <br>
  <%= f.label :auditorium  %>
  <%= f.text_field :auditorium, value: @showing.auditorium.name.presence || "" %>
  <br>
  <%= f.label :date  %>
  <%= f.text_field :date, placeholder: "YYYY-MM-DD" %>
  <br>
  <%= f.label :time  %>
  <%= f.text_field :time, placeholder: "HH:MM:SS" %>
  <br>
  <%= f.submit %>
<% end %>