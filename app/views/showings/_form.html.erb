<%= form_for @showing do |f| %>

  <% if @errors %>
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>

  <%= f.label :movie  %>
  <%= f.text_field :movie %>
  <br>
  <%= f.label :auditorium  %>
  <%= f.text_field :auditorium %>
  <br>
  <%= f.label :date  %>
  <%= f.text_field :date %>
  <br>
  <%= f.label :time  %>
  <%= f.text_field :time %>
  <br>
  <%= f.submit %>
<% end %>