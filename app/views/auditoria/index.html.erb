<section class="teal center center-align">

  <% if admin_user %>
    <%= link_to 'Add Auditorium', new_auditorium_path, class: "btn-large orange custom-btn" %>
  <% end %>

  <% @auditoria.each do |auditorium| %>
    <div class="row custom-row customm">
      <div class="col s7 push-s5 m4 customm">
        <div class="card customm">
          <div class="card-content teal-text center light">
            <h2 class="center brown-text"><i class="material-icons">theaters</i></h2>
              <%= link_to (auditorium) do %>
                <h5 class="card-title">Auditorium <%= auditorium.name %></h5>
              <% end %>
              <% if admin_user %>
              <div class="card-action">
              <%= link_to 'Edit', edit_auditorium_path(auditorium) %>
              <%= link_to 'Delete', auditorium, method: :delete, data: {confirm: 'Are you sure you want to delete this auditorium?'} %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  <% end %>

</section>